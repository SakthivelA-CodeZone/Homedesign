<Window x:Class="Usingdock.FORLOGIN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Usingdock"
        mc:Ignorable="d"
        Title="FORLOGIN" Height="600" Width="800">
    <StackPanel>
        <TextBlock FontSize="34" HorizontalAlignment="Center" >SIGNIN</TextBlock>
        <TextBlock  Height="40" Width="100" Margin="100,70,400,0" FontSize="34" >NAME</TextBlock>
        <TextBox Height="40" Width="350" Margin="19,-30,-250,10" FontSize="25" x:Name="txtlogin" >
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="ADD" Click="MenuItem_Click" />
                    <MenuItem Header="EMPTY" Click="MenuItem_Click_1" />
                    <MenuItem Header="VERIFY" Click="MenuItem_Click_2"/> 
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
        
        <TextBlock  Height="40" Width="100" Margin="100,70,400,0" FontSize="34" >EMAIL</TextBlock>
        <TextBox Height="40" Width="350" Margin="19,-30,-250,10" ></TextBox>
        <TextBlock  Height="40" Width="200" Margin="100,70,400,0" FontSize="34" >PASSWORD</TextBlock>
        <PasswordBox Height="40" Width="350" FontSize="25" Margin="19,-30,-250,10" >
            <PasswordBox.ContextMenu>
                <ContextMenu Visibility="Collapsed">
                    
                </ContextMenu>
            </PasswordBox.ContextMenu>
        </PasswordBox>
            <Button  Height="50" Width="500" FontSize="34" Margin="100,50,0,0" >LOGIN</Button>

    </StackPanel>
</Window>
